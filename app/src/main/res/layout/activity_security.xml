<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A10B3E"
    tools:context=".SecurityActivity">

    <Button
        android:id="@+id/visitorRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/gradient_blue_square"
        android:text="Send Visitor Request"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewAllowedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/gradient_blue_square"
        android:text="View Allowed Visitors"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/visitorRequestButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewComplaintsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/gradient_blue_square"
        android:text="Complaints Received"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visitorRequestButton" />

    <Button
        android:id="@+id/amenityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="77dp"
        android:background="@drawable/gradient_blue_square"
        android:text="View Amenity Status"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewComplaintsBtn"
        app:layout_constraintTop_toBottomOf="@+id/viewAllowedButton" />

    <Button
        android:id="@+id/clearChatButton"
        android:layout_width="148dp"
        android:layout_height="52dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/gradient_blue_square"
        android:text="Clear Chatroom"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewComplaintsBtn" />

    <Button
        android:id="@+id/announceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/gradient_blue_square"
        android:text="Make Announcement"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amenityButton" />
</androidx.constraintlayout.widget.ConstraintLayout>